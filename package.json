{
  "name": "rin-anidb",
  "description": "Rin Minase's Anime Database using AngularJS in ES6 compiled for Android with Cordova and deployed to Firebase using Circle CI",
  "homepage": "https://rin-anidb.firebaseapp.com/",
  "version": "0.1.0",
  "license": "MIT",
  "author": "Rin Minase",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/RinMinase/anidb-angular"
  },
  "main": "index.js",
  "scripts": {
    "gulp": "gulp",
    "start": "gulp serve",
    "start-prod": "gulp serve:dist",
    "build": "gulp build",
    "bundle": "gulp bundle && cordova build android && adb install -r build/com.minase.anidb_0.1.0.apk",
    "deploy": "gulp build && firebase deploy",
    "lint": "eslint --ext .js src\\app",
    "test": "nightwatch --config src/assets/testing/nightwatch.conf.js",
    "setup": "node src/assets/testing/nightwatch.conf.js && cordova platform add android && yarn",
    "setup-android": "cordova platform add android && yarn",
    "setup-testing": "node src/assets/testing/nightwatch.conf.js"
  },
  "dependencies": {
    "@uirouter/angularjs": "^1.0.22",
    "angular": "1.7.8",
    "angular-animate": "^1.7.8",
    "angular-chart.js": "^1.1.1",
    "angular-hammer": "^2.2.0",
    "angular-sweetalert": "^1.1.2",
    "animatewithsass": "^3.2.1",
    "awesome-bootstrap-checkbox": "^1.0.1",
    "bluebird": "^3.5.5",
    "bootstrap": "^4.3.1",
    "firebase": "^6.4.0",
    "font-awesome": "^4.7.0",
    "fuse.js": "^3.4.5",
    "lodash": "^4.17.15",
    "moment-mini": "^2.22.1",
    "oclazyload": "^1.1.0",
    "roboto-fontface": "^0.10.0",
    "ui-bootstrap4": "^3.0.6",
    "velocity-animate": "^1.5.2",
    "xlsx": "^0.15.1"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "babel-loader": "8.0.6",
    "browser-sync": "^2.26.7",
    "browser-sync-spa": "^1.0.3",
    "chromedriver": "^76.0.1",
    "cordova-android": "^8.0.0",
    "cordova-plugin-whitelist": "^1.3.4",
    "dotenv": "^8.1.0",
    "eslint": "^6.2.2",
    "eslint-loader": "^3.0.0",
    "eslint-plugin-angular": "^4.0.0",
    "fancy-log": "^1.3.3",
    "firebase-tools": "^7.2.2",
    "gulp": "^4.0.2",
    "gulp-angular-templatecache": "^3.0.0",
    "gulp-autoprefixer": "^6.1.0",
    "gulp-clean": "^0.4.0",
    "gulp-filter": "^6.0.0",
    "gulp-htmlmin": "^5.0.1",
    "gulp-inject": "^5.0.4",
    "gulp-inject-string": "^1.1.2",
    "gulp-rev": "^9.0.0",
    "gulp-rev-replace": "^0.4.2",
    "gulp-sass": "^4.0.2",
    "gulp-sass-lint": "^1.4.0",
    "gulp-useref": "^3.1.6",
    "html-loader": "^0.5.5",
    "ng-annotate-loader": "^0.6.1",
    "ng-annotate-patched": "^1.10.0",
    "ngtemplate-loader": "^2.0.1",
    "nightwatch": "^1.2.1",
    "undertaker-forward-reference": "^1.0.2",
    "webpack": "^4.39.3",
    "webpack-stream": "^5.2.1"
  },
  "resolutions": {
    "**/@firebase/app-types": "^0.4.3",
    "**/@firebase/util": "^0.2.25",
    "**/angular": "^1.7.8",
    "**/jquery": "^3.4.1",
    "**/popper.js": "^1.15.0"
  },
  "engines": {
    "node": "^8.10.0 || >=9.10.0",
